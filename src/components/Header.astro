---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="social-links">
			<a href="https://github.com/AhmedMustafaSarhan" target="_blank">GitHub</a>
		</div>
	</nav>
</header>
<style>
	header { margin: 0; padding: 0 1em; background: linear-gradient(to bottom, #0f172a, #1e293b); box-shadow: 0 2px 8px rgba(0, 0, 0, 20%); border-bottom: 1px solid rgba(59, 130, 246, 0.2); }
	nav { display: flex; align-items: center; justify-content: space-between; }
	nav a { padding: 1em 0.5em; color: #e5e7eb; border-bottom: 4px solid transparent; text-decoration: none; transition: all 0.3s ease; }
	nav a:hover { color: #3b82f6; border-bottom-color: #3b82f6; }
	nav a.active { text-decoration: none; border-bottom-color: #3b82f6; color: #3b82f6; }
	.social-links, .social-links a { display: flex; }
	.social-links a { color: #9ca3af; transition: color 0.3s ease; }
	.social-links a:hover { color: #3b82f6; }
	@media (max-width: 720px) { .social-links { display: none; } }
</style>
