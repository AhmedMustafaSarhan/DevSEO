  '@context': 'https://schema.org',
  '@type': 'BlogPosting',
  headline: title,
  description: description,
  image: image,
  datePublished: fullPost.published_at || fullPost.created_at,
  dateModified: fullPost.updated_at,
  inLanguage: 'ar-EG',
  author: {
    '@type': 'Person',
    name: fullPost.author?.name || 'DevSEO',
  },
};

const readingTime = getReadingTime(getTranslation(fullPost.content, locale), locale);
